@model Employee

<div class="row">
    <div class="col-12">
        <form asp method="post">

            <div class="form-group">
                <label>ID</label>
                <input type="number" asp-for="@Model.ID" />
            </div>
            <div class="form-group">
                <label> Name</label>
                <input type="text" asp-for="@Model.Name" />
            </div>
            <div class="form-group">
                <label>DOJ</label>
                <input type="number" asp-for=" @Model.DOJ" />
            </div>
            <div class="form-group">
                <label> Designation </label>
                <input type="text" asp-for="@Model.Designation" />
            </div>
            <div class="form-group">
                <label>Address</label>
                <input type="text" asp-for="@Model.Address" />
            </div>

            
            <button type="submit" class="btn btn-primary">Add Employee</button>

        </form>

    </div>
</div>
